<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ssw.benchmark.viewer.BenchmarkController"
            prefHeight="500.0" prefWidth="860.0">
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Suite">
                    <cellValueFactory>
                        <PropertyValueFactory property="suite" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="firstIteration" text="#1"/>
                <TableColumn fx:id="secondIteration" text="#2"/>
                <TableColumn fx:id="thirdIteration" text="#3"/>
                <TableColumn fx:id="fourthIteration" text="#4"/>
                <TableColumn fx:id="fifthIteration" text="#5"/>
                <TableColumn fx:id="sixthIteration" text="#6"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="5" top="5" left="5" right="5"/>
            </padding>
            <Button text="Add Benchmark" onAction="#addBenchmark"/>
            <Button text="Remove Benchmark" onAction="#removeBenchmark"/>
        </HBox>
    </bottom>
</BorderPane>
